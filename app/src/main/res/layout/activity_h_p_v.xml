<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HPV" android:background="#FFFFFF">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="79dp"
            tools:layout_editor_absoluteX="0dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFF">
            <TextView
                    android:text="HPV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:id="@+id/Paragrafo1"/>

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="438dp"
                    android:layout_height="238dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@mipmap/ic_launcher_hpv2_foreground"
                    android:id="@+id/imageView7"/>
            <TextView
                    android:text="O HPV (sigla em inglês para Papilomavírus Humano) é um vírus que infecta a pele ou mucosas (oral, genital ou anal) das pessoas, provocando verrugas anogenitais (na região genital e ânus) e câncer, a depender do tipo de vírus. A infecção pelo HPV é uma Infecção Sexualmente Transmissível (IST)."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textColor="@color/black"
                    android:id="@+id/Paragrafo2"
                    android:editable="false"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"/>


            <TextView
                    android:text="Como é Transmitida?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/Paragrafo3"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"/>

            <TextView
                    android:text="A transmissão do HPV se dá por contato direto com a pele ou mucosa infectada. A principal forma de transmissão é pela via sexual, que inclui contato oral-genital, genital-genital ou mesmo manual-genital. Portanto, o contágio com o HPV pode ocorrer mesmo na ausência de penetração vaginal ou anal. Também pode haver transmissão durante o parto.
Como muitas pessoas infectadas pelo HPV não apresentam sinais ou sintomas, elas não sabem que têm o vírus, mas podem transmiti-lo."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textColor="@color/black"
                    android:id="@+id/Paragrafo4"
                    android:editable="false"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"/>

            <TextView
                    android:text="Sintomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/Paragrafo8"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"/>
            <TextView
                    android:text=" 1. Vermelhidão local.\n 2. Ardor no local da verruga.\n 3. Coceira na região genital.\n 4. Presença de lesões nos lábios, bochechas ou garganta, quando a infecção foi por meio da relação sexual oral."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:id="@+id/Paragrafo9"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"/>

            <TextView
                    android:text="Como se Previnir?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/Paragrafo10"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"/>

            <TextView
                    android:text="Vacinar-se contra o HPV é a medida mais eficaz de se prevenir contra a infecção. A vacina é distribuída gratuitamente pelo SUS e é indicada para:
                    \n\n 1. Meninas de 9 a 14 anos e meninos de 11 a 14 anos.
                    \n\n 2. Homens que vivem com HIV, transplantados de órgãos sólidos, de medula óssea ou pacientes oncológicos na faixa etária de 9 a 26 anos.
                    \n\n 3. Mulheres que vivem com HIV, transplantados de órgãos sólidos, de medula óssea ou pacientes oncológicos na faixa etária de 9 a 45 anos.  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:id="@+id/Paragrafo11"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>