<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable name="myTelaInicia" type="com.example.novoteste.MainActivity"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Tela_Inicial">
    
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView6"/>
    
    
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/scrollView2" app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFF">
    
            <TextView
                    android:text="Seja bem-vindo\n           ao\n          IDS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:id="@+id/textView4"/>
            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="438dp"
                    android:layout_height="238dp"
                    app:srcCompat="@mipmap/ic_launcher_camisinha_home_foreground"
                    android:id="@+id/imageView8"/>
            <TextView
                    android:text="Use Preservativo!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-20dp"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:id="@+id/textView2"/>
            <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:layout_marginTop="50dp"
                    android:layout_width="318dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/Clinicas" app:cardCornerRadius="20dp" app:cardBackgroundColor="#42A2F6">>
                <TextView
                        android:text="ClÃ­nicas"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textSIFILIS"
                        android:textSize="36sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="#00FFFFFF"
                        android:textColorHighlight="#00FFFFFF" android:editable="false"
                />
            </androidx.cardview.widget.CardView>
    
            <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:layout_marginTop="50dp"
                    android:layout_width="318dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/Provisoria"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#42A2F6">
                <TextView
                        android:text="IST's"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textAIDS" android:textSize="36sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="#00FFFFFF"
                        android:textColorHighlight="#00FFFFFF" android:editable="false"
                />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>